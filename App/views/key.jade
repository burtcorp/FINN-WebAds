html(lang='no')
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/all.css')    
    link(rel='stylesheet', href='/css/webAds.css')
    link(rel='stylesheet', href='/css/webAds.responsive.css')
    link(rel='stylesheet', href='/css/webAds.logger.css')
    include partials/scripts
    style
      * {margin: 0; padding: 0;}
      body {
        padding: 10px
      }
      .page {
        max-width: 980px;
        padding: 0 0 0 10px;
        background: #fff;
        height: 2900px;
      }
      .body {
        background: #ccc;
      }
      p {
        margin: 0 0 10px 0;
      }

  body(lang='no')

    div.page
      div(data-webads="true")#banners
        div(data-webads="true")#banners-right
      div.body
        h1= title
        br
        include partials/menu      
        div(data-webads="true")#banners-middle
    
    script(type='text/javascript')
      var FINN = FINN||{};
        
      jQuery(document).ready(function(){
        // adBlocker
        if(!FINN.webAds) return;

        FINN.webAds.base      = "/config/";    
        FINN.webAds.iframeUrl = "/iframe.html";

        FINN.webAds.one('all-webads-resolved', function(){  
          FINN.webAds.sticky('banners-right', '.page'); 
        });
        
        FINN.webAds.getFromServer('/config/#{key}/heliosAds', function(err, data){
            FINN.webAds.renderAll(); //todo, render same as defined.
        });
        
        

      });
