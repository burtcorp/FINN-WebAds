html
  head
    title= title
    link(rel='stylesheet', href='/webAds.css')
    include partials/scripts
    style
      * {margin: 0; padding: 0;}
      body {
        padding: 10px
      }
      .container {
        width: 960px;
        padding: 10px;
        background: #ccc;
        min-height: 900px;
      }
      p {
        margin: 0 0 10px 0;
      }

  body
  
    div.webads#banners  
    div.wrapper.container
      p= title
      include partials/menu      
      div#banners-middle
    
    script(type='text/javascript')
      var FINN = FINN||{};
      jQuery(document).ready(function(){
        // adBlocker
        if(!FINN.webAds) return;

        FINN.webAds.base      = "/config/";    
        FINN.webAds.iframeUrl = "/iframe.html";

        //TODO URL
        FINN.webAds.getFromServer('/config/#{key}/heliosAds', function(err, data){
            FINN.webAds.renderAll();
        });

      });
