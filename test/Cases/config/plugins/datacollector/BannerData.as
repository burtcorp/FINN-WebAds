package {  import flash.display.MovieClip;  import flash.display. * ;  import flash.text.TextFormat;  import flash.text.TextField;  import flash.net.URLRequest;  import flash.external. * ;  public class BannerData extends MovieClip {    private var newTextField: TextField = new TextField();    private var newTextFormat: TextFormat = new TextFormat();    public function BannerData() {      if (ExternalInterface.available) {        ExternalInterface.call("banner.plugin", "flash_getBannerAdData", "{'customer': 1, 'area': 1}", "sendDataBack");        ExternalInterface.addCallback("sendDataBack", ResultHandler);      }      newTextFormat.size  = 40;      newTextField.width  = 980;      newTextField.height = 150;      newTextField.defaultTextFormat = newTextFormat;      newTextField.text = "Laster...";      addChild(newTextField);    }    public function ResultHandler(data: String) {      newTextField.text = data;    }  }}