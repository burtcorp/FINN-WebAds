package {  import flash.display.MovieClip;  import flash.display. * ;  import flash.text.*;  import flash.net.URLRequest;  import flash.external. * ;  public class BannerData extends MovieClip {    private var field: TextField = new TextField();    private var format: TextFormat = new TextFormat();    public function BannerData() {      if (ExternalInterface.available) {        ExternalInterface.call("banner.plugin", "getAdData", '{"customer": 1, "area": 1}', "sendDataBack");        ExternalInterface.addCallback("sendDataBack", ResultHandler);      }      format.size  = 10;	  format.font  = "Monaco";      field.width  = 980;      field.height = 150;	  field.antiAliasType = AntiAliasType.ADVANCED;      field.defaultTextFormat = format;      field.text = "Laster...";      addChild(field);    }    public function ResultHandler(data: String) {      field.text = data;    }  }}